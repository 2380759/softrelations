<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no">
    <title>Staff Dashboard</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/feebackdetails.js"></script>
    <%- include('./partials/bootstrap') %>
    <style>
        h1, h2, h3, h4, h5, h6 {
            color: white;
        }

        body {
            background-color: #343a40; /* Dark background color */
        }

        .main-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Full height of the viewport */
            padding: 20px;
        }

        .card {
            background-color: #ffffff; /* White background for cards */
            border-radius: 8px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* Box shadow for elevation */
            margin: 10px;
            padding: 20px;
            text-align: center;
            width: 300px; /* Width of each card */
            transition: transform 0.3s ease; /* Smooth transition effect */
        }

        .card:hover {
            transform: translateY(-5px); /* Move the card up slightly on hover */
        }

        .card h4 {
            margin-bottom: 10px; /* Add some space below the heading */
            color: #333333; /* Dark text color for headings */
        }

        .card p {
            color: #666666; /* Medium gray text color for paragraphs */
        }

        .clickable-div {
            text-decoration: none; /* Remove underline from links */
            color: #333333; /* Dark text color for links */
        }

        .clickable-div:hover {
            opacity: 0.8; /* Reduce opacity on hover */
        }
    </style>
</head>
<body>
    <!-- Nav -->
    <%- include('./partials/usernav') %>
    <!-- Main content here -->
    <h3 class="text-center">Dashboard Overview</h3>
    <div class="main-container">
        <div class="card">
            <a href="#" onclick="fetchFeedbacks()" class="clickable-div">
                <h4>Feedback History</h4>
                <p>Click Here To View All Feedbacks</p>
            </a>
        </div>
        <div class="card">
            <a href="/bookings/create" class="clickable-div">
                <h4>Bookings</h4>
                <p>Click Here To View Your Bookings.</p>
            </a>
        </div>
        <div class="card">
            <a href="/timesheets/create" class="clickable-div">
                <h4>Timesheets/Tasks</h4>
                <p>Click Here To View Your Timesheets.</p>
            </a>
        </div>
    </div>
</body>
</html>
